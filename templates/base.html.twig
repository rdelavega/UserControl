<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>
      {% block title %}Welcome!{% endblock %}
    </title>
    {% block stylesheets %}
      <!--Import Google Icon Font-->
      <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <!--Import materialize.css-->
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
      <link rel="stylesheet" href="/css/master.css">
    {% endblock %}
  </head>
  <body>

    <nav class="indigo">
      <div class="nav-wrapper">
        <a href="#" class="brand-logo" style="margin-left: 15px;">User-Control</a>
        <a href="#" data-target="mobile-demo" class="sidenav-trigger">
          <i class="material-icons">menu</i>
        </a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <li>
              <a>Home</a>
            </li>
            <li>
              <a>Component</a>
            </li>
            <li>
              <a>Posts</a>
            </li>
            <li>
              <a>
                <i class="material-icons">close</i>
              </a>
            </li>
          {% endif %}
        </ul>
      </div>
    </nav>

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
      <ul class="sidenav" id="mobile-demo">
        <li>
          <div class="user-view">
            <div class="background">
              <img src="">
            </div>
            <a href="#user"><img class="circle" src=""></a>
            <a href="#name">
              <span class="white-text name">John Doe</span></a>
            <a href="#email">
              <span class="white-text email">jdandturk@gmail.com</span></a>
          </div>
        </li>
        <li>
          <a>Home</a>
        </li>
        <li>
          <a>Component</a>
        </li>
        <li>
          <a>Posts</a>
        </li>
        <li>
          <a class="waves-effect waves-light indigo btn-large">
            Logout
          </a>
        </li>
      </ul>
    {% endif %}

    {% block body %}{% endblock %}

    {% block javascripts %}
      <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
      <!--JavaScript at end of body for optimized loading-->
      <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
      <script type="text/javascript">
        $(document).ready(function() {
          $('.sidenav').sidenav();
          $('select').formSelect();
          $('.materialboxed').materialbox();
          if ($('#user_save')) {
            console.log("me");
            $('#user_save').append('<i class="material-icons right">send</i>');
          }
        })
      </script>
    {% endblock %}
  </body>
</html>