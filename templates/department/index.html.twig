{% extends 'base.html.twig' %}

{% block body %}

  <div class="container">
    <h1>Department List</h1>
    <div class="row">
      <div class="col s12">
        <ul class="collection with-header">
          {% for department in departments %}
            <li class="collection-item">
              <div>{{ department.name }}
                <a href=" {{ path('department.delete', {id: department.id} ) }} " class="secondary-content red-text">
                  <i class="material-icons">delete</i>
                </a>
                <a href=" {{ path('department.edit', {id: department.id} ) }} " class="secondary-content green-text" style="margin-right: 10px;">
                  <i class="material-icons">edit</i>
                </a>
              </div>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>

  <div class="fixed-action-btn">
    <a class="btn-floating btn-large red waves-effect waves-light tooltipped" data-position="left" data-tooltip="Agregar Departamento" href=" {{ path('department.add') }} ">
      <i class="large material-icons">add</i>
    </a>
  </div>

{% endblock %}